{
  "title": "Electron Mailer",
  "paths": {
    "css": "./public/css/",
    "js": "./public/js/",
    "data": "./data/",
    "audio": "./public/audio/"
  },
  "requireScripts": [
    "velocity.min",
    "particles.min",
    "global", "forms",
    "modal",
    "waves",
    "renderer"
  ],
  "mdl": {
    "dismissible": true,
    "opacity": 0.5,
    "inDuration": 400,
    "outDuration": 200,
    "startingTop": "4%",
    "endingTop": "10%"
  },
  "defaults": {
    "to": "to6@test.com",
    "from": "'ben eaves' <beneaves01@hotmail.com>",
    "subject": "test subject3",
    "text": "sdgfdsfsdfsdf",
    "html": "<h3>testHtml345</h3>"
  },
  "sounds": ["hover.mp3"],
  "tplDirs": {
    "to": "./templates/mailToList/",
    "text": "./templates/text/",
    "html": "./templates/html/"
  },
  "itemList": ["to", "from", "subject", "text", "html"],
  "mail": {
    "host": "smtp.live.com",
    "port": 25,
    "secure": false,
    "auth": {
      "type": "hotmail",
      "clientId": "clientid",
      "clientSecret": "clientsecret",
      "refreshToken": "refreshtoken",
      "accessToken": "accesstoken",
      "username": "username",
      "password": "",
      "expires": 12345
    }
  },
  "particles": {
    "particles": {
      "number": {
        "value": 100,
        "density": {
          "enable": true,
          "value_area": 1800
        }
      },
      "color": {
        "value": "#000"
      },
      "shape": {
        "type": "",
        "random": true,
        "stroke": {
          "width": 0
        },
        "polygon": {
          "nb_sides": 3
        }
      },
      "opacity": {
        "value": 0.3,
        "random": false,
        "anim": {
          "enable": false,
          "speed": 1,
          "opacity_min": 0.1,
          "opacity_max": 0.2,
          "sync": false
        }
      },
      "size": {
        "value": 40,
        "random": true,
        "anim": {
          "enable": true,
          "speed_min": 0.2,
          "size_min": 2,
          "sync": false
        }
      },
      "line_linked": {
        "enable": true,
        "distance": 100,
        "color": "#000",
        "opacity": 0.3,
        "width": 0.6
      },
      "move": {
        "enable": true,
        "speed_min": 1,
        "direction": "none",
        "random": true,
        "straight": false,
        "out_mode": "out",
        "bounce": false,
        "attract": {
          "enable": false,
          "rotateX": 1200,
          "rotateY": 1200
        }
      }
    },
    "interactivity": {
      "detect_on": "canvas",
      "events": {
        "onhover": {
          "enable": false,
          "mode": "grab"
        },
        "onclick": {
          "enable": false,
          "mode": "push"
        },
        "resize": true
      },
      "modes": {
        "grab": {
          "distance": 400,
          "line_linked": {
            "opacity": 1
          }
        },
        "repulse": {
          "distance": 200,
          "duration": 0.4
        },
        "push": {
          "particles_nb": 4
        },
        "remove": {
          "particles_nb": 2
        }
      }
    },
    "retina_detect": true
  }
}
